<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="HeartBeat">

    <insert id="add" parameterType="team.hnuwt.servicesoftware.synchronizer.model.HeartBeat">
        replace into tb_HeartBeat(collectorId,port,time)
        values(#{collectorId},#{port},#{time})
    </insert>

    <insert id="addBatch">
        replace into tb_HeartBeat(collectorId,port,time)
        values
        <foreach collection="list" item="heartbeat" separator=",">
            (#{heartbeat.collectorId},#{heartbeat.port},#{heartbeat.time})
        </foreach>
    </insert>

</mapper>